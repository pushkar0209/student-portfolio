@import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;700;900&family=Space+Grotesk:wght@300;400;500;600;700&display=swap');

@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    --background: 210 40% 98%;
    --foreground: 222.2 84% 4.9%;
    --card: 0 0% 100%;
    --card-foreground: 222.2 84% 4.9%;
    --popover: 0 0% 100%;
    --popover-foreground: 222.2 84% 4.9%;
    --primary: 262 83% 58%;
    /* More vibrant violet */
    --primary-foreground: 210 40% 98%;
    --secondary: 199 89% 48%;
    --secondary-foreground: 222.2 47.4% 11.2%;
    --muted: 210 40% 96.1%;
    --muted-foreground: 215.4 16.3% 46.9%;
    --accent: 290 90% 66%;
    /* Vibrant Pinkish-Purple */
    --accent-foreground: 222.2 47.4% 11.2%;
    --destructive: 0 84.2% 60.2%;
    --destructive-foreground: 210 40% 98%;
    --border: 214.3 31.8% 91.4%;
    --input: 214.3 31.8% 91.4%;
    --ring: 262 83% 58%;
    --radius: 0.75rem;
  }

  .dark {
    --background: 230 40% 5%;
    /* Deeper Dark */
    --foreground: 210 40% 98%;
    --card: 230 40% 8%;
    --card-foreground: 210 40% 98%;
    --popover: 230 40% 10%;
    --popover-foreground: 210 40% 98%;
    --primary: 262 83% 58%;
    --primary-foreground: 210 40% 98%;
    --secondary: 199 89% 48%;
    --secondary-foreground: 210 40% 98%;
    --muted: 217.2 32.6% 12%;
    --muted-foreground: 215 20.2% 75%;
    --accent: 290 90% 66%;
    --accent-foreground: 210 40% 98%;
    --border: 217.2 32.6% 15%;
    --input: 217.2 32.6% 15%;
    --ring: 262 83% 58%;
  }
}

body {
  background-color: hsl(var(--background));
  color: hsl(var(--foreground));
  @apply font-sans antialiased overflow-x-hidden transition-colors duration-300;
  cursor: default;
  /* Reverting to default cursor for "realistic" feel */
}

/* Custom Scrollbar */
::-webkit-scrollbar {
  width: 10px;
}

::-webkit-scrollbar-track {
  background: hsl(var(--muted));
}

::-webkit-scrollbar-thumb {
  background: hsl(var(--muted-foreground) / 0.3);
  border-radius: 5px;
  border: 2px solid hsl(var(--muted));
}

::-webkit-scrollbar-thumb:hover {
  background: hsl(var(--primary));
}

/* Glass Panel */
.glass-panel {
  @apply backdrop-blur-xl bg-white/40 dark:bg-slate-900/40 border border-white/40 dark:border-white/10 shadow-2xl;
}

.glass-card {
  @apply backdrop-blur-lg bg-white/20 dark:bg-white/5 border border-white/30 dark:border-white/10 shadow-[0_8px_32px_0_rgba(31, 38, 135, 0.07)] dark:shadow-[0_8px_32px_0_rgba(0, 0, 0, 0.37)];
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.glass-card:hover {
  @apply bg-white/30 dark:bg-white/10 border-white/50 dark:border-white/20 transform -translate-y-1;
}

.mesh-background {
  background-color: hsl(var(--background));
  background-image:
    radial-gradient(at 0% 0%, hsla(var(--primary) / 0.15) 0px, transparent 50%),
    radial-gradient(at 100% 0%, hsla(var(--secondary) / 0.15) 0px, transparent 50%),
    radial-gradient(at 100% 100%, hsla(var(--accent) / 0.15) 0px, transparent 50%),
    radial-gradient(at 0% 100%, hsla(var(--primary) / 0.1) 0px, transparent 50%);
  background-attachment: fixed;
}

.text-gradient {
  background: linear-gradient(to right, hsl(var(--primary)), hsl(var(--accent)));
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
}

.noise-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 9999;
  opacity: 0.02;
  /* Much subtler noise */
  background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
}